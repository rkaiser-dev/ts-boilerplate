{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate Template for TS-based Projects",
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "npx tsc --build tsconfig.json",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier --write \"{*.ts}\"",
    "test": "jest",
    "prepare": "husky install"
  },
  "author": "Ryan Kaiser",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
